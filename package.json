    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.10",
    "@tailwindcss/vite": "^4.1.6",
    "classnames": "^2.5.1",
    "lamejs": "^1.2.1",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.6",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/react": "^18.2.64",
